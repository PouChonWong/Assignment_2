{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/PouChonWong/Assignment_2/refs/heads/main/Data/Waterfall.csv"
  },
  "title": {
    "text": "Number of suicide over the years",
    "fontSize": 18,
    "color": "dodgerblue"
  },
  "background": "#E5F3FD",
  "width": 1000,
  "height": 600,
  "transform": [
    {"window": [{"op": "sum", "field": "amount", "as": "sum"}]},
    {"window": [{"op": "lead", "field": "label", "as": "lead"}]},
    {
      "calculate": "datum.lead === null ? datum.label : datum.lead",
      "as": "lead"
    },
    {
      "calculate": "datum.label === 'End' ? 0 : datum.sum - datum.amount",
      "as": "previous_sum"
    },
    {
      "calculate": "datum.label === 'End' ? datum.sum : datum.amount",
      "as": "amount"
    },
    {
      "calculate": "(datum.label !== 'Begin' && datum.label !== 'End' && datum.amount > 0 ? '+' : '') + datum.amount",
      "as": "text_amount"
    },
    {"calculate": "(datum.sum + datum.previous_sum) / 2", "as": "center"},
    {
      "calculate": "datum.sum < datum.previous_sum ? datum.sum : ''",
      "as": "sum_dec"
    },
    {
      "calculate": "datum.sum > datum.previous_sum ? datum.sum : ''",
      "as": "sum_inc"
    }
  ],
  "encoding": {
    "x": {
      "field": "label",
      "type": "ordinal",
      "sort": null,
      "axis": {"labelAngle": 0, "title": "Year"}
    }
  },
  "layer": [
    {
      "mark": {"type": "bar", "size": 45, "clip": true},
      "encoding": {
        "y": {
          "field": "previous_sum",
          "type": "quantitative",
          "title": "Total no. of suicides",
          "axis": {"domain": false, "grid": false, "ticks": false},
          "scale": {"domain": [2100000, 2400000]}
        },
        "y2": {"field": "sum"},
        "color": {
          "condition": [
            {"test": "datum.label === '2000'", "value": "#f7e0b6"},
            {"test": "datum.sum < datum.previous_sum", "value": "#f78a64"}
          ],
          "value": "#93c4aa"
        },
        "tooltip": [
          {
            "title": "Total no. of suicides:",
            "field": "Total",
            "type": "quantitative"
          },
          {
            "title": "Change in Numbers:",
            "field": "amount",
            "type": "quantitative"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "#404040",
        "opacity": 1,
        "strokeWidth": 1.5,
        "xOffset": -21.5,
        "x2Offset": 21.5,
        "clip": true
      },
      "encoding": {
        "x2": {"field": "lead"},
        "y": {"field": "sum", "type": "quantitative"}
      }
    },
    {
      "mark": {"type": "text", "dy": -10, "baseline": "bottom", "clip": true, "size":10},
      "encoding": {
        "y": {"field": "sum_inc", "type": "quantitative"},
        "text": {"field": "sum_inc", "type": "nominal"}
      }
    },
    {
      "mark": {"type": "text", "dy": 10, "baseline": "top", "clip": true, "size":10},
      "encoding": {
        "y": {"field": "sum_dec", "type": "quantitative"},
        "text": {"field": "sum_dec", "type": "nominal"}
      }
    }
  ],
  "config": {
    "text": {"fontWeight": "bold", "color": "#404040"},
    "view": {"stroke": null}
  }
}
