{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Suicide Rate vs GDP per capita"},
  "data": {
    "url": "https://raw.githubusercontent.com/PouChonWong/Assignment_2/refs/heads/main/Data/2020.csv"
  },
  "width": 800,
  "height": 400,
  "background": "#E5F3FD",
  "mark": "point",
  "encoding": {
    "x": {
      "field": "GDP per capita",
      "title": "GDP per capita",
      "type": "quantitative"
    },
    "y": {
      "field": "Number",
      "title": "No. of suicide (per 100,000 people)",
      "type": "quantitative"
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "title": "Continent",
      "scale": {
        "domain": [
          "Western Europe",
          "North America",
          "Australia and New Zealand",
          "Middle East and Northern Africa",
          "Latin America and Caribbean",
          "Southeastern Asia",
          "Central and Eastern Europe",
          "Sub-Saharan Africa"
        ],
        "range": [
          "#1f77b4",
          "#ff7f0e",
          "#2ca02c",
          "#d62728",
          "#9467bd",
          "#8c564b",
          "#e377c2",
          "#7f7f7f"
        ]
      }
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country:"},
      {"field": "Ranking", "type": "ordinal", "title": "Rank:"},
      {"field": "Number", "type": "quantitative", "title": "Number:"}
    ]
  },
  "config": {
    "legend": {"labelFontSize": 12, "titleFontSize": 14, "orient": "right"}
  }
}