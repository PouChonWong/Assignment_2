{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/PouChonWong/Assignment_2/refs/heads/main/Data/2000_2021.csv"
  },
  "title": {
    "text": "Total number of suicide across the world",
    "subtitle": "No. of suicide in different contient (per 100,000 population)",
    "fontSize": 18,
    "color": "dodgerblue"
  },
  "background": "#E5F3FD",
  "width": 500,
  "height": 400,
  "layer": [
    {"mark": {"type": "arc", "innerRadius": 30, "stroke": "#fff"}},
    {
      "mark": {"type": "text", "radiusOffset": 20},
      "encoding": {"text": {"field": "Total", "type": "quantitative"}}
    }
  ],
  "encoding": {
    "theta": {"field": "Total", "type": "quantitative", "stack": true},
    "radius": {
      "aggregate": "",
      "field": "Total",
      "scale": {"type": "sqrt", "zero": true, "rangeMin": 100}
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "legend": {"symbolStrokeColor": "#ffffff"}
    },
    "tooltip": [
      {"title": "Region:", "field": "Region", "type": "nominal"},
      {"title": "Total no. of suicide:", "field": "Total","type": "quantitative"
      }
    ]
  },
  "config": {}
}
