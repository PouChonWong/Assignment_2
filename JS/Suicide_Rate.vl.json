{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Suicide Rate of Countries in 2020",
    "fontSize": 18,
    "color": "dodgerblue"
  },
  "background": "#E5F3FD",
  "width": 800,
  "height": 400,
  
  "projection": {"type": "equalEarth"},
  "config": {"view": {"stroke": null}},
  "data": {
    "url": "https://raw.githubusercontent.com/PouChonWong/Assignment_2/main/JS/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/PouChonWong/Assignment_2/main/JS/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "#b7dbfb"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/PouChonWong/Assignment_2/main/JS/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "gray"}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/PouChonWong/Assignment_2/refs/heads/main/Data/2020.csv"
            },
            "key": "Country",
            "fields": ["Number"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Number",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [2, 3, 4, 5, 6, 7],
            "range": [
              "#be2a3e",
              "#e25f48",
              "#f88f4e",
              "#f4d165",
              "#8fb960",
              "#4c9b5f",
              "#22763e"
            ]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "Number",
            "type": "quantitative",
            "title": "Deaths per 100,000 people"
          }
        ]
      }
    }
  ]
}
